{
    "name": "cnodejs",
    "version": "1.0.0",
    "description": "基于electron的cnodejs社区桌面客户端",
    "main": "main.js",
    "scripts": {
        "start": "electron main.js",
        "dev": "electron index.js",
        "build:mac": "electron-packager ./ cnodejs --platform=darwin --arch=x64  --overwrite --out ./dist/$npm_package_version --version=0.37.8 --ignore='(.github|.git|.DS_Store|TODOS.md|imgPreview|dist)'",
        "build:win32": "electron-packager ./ cnodejs --platform=win32 --arch=ia32  --overwrite --out ./dist/$npm_package_version --version=0.37.8 --ignore='(.github|.git|.DS_Store|TODOS.md|imgPreview|dist)'",
        "build:win64": "electron-packager ./ cnodejs --platform=win32 --arch=x64  --overwrite --out ./dist/$npm_package_version --version=0.37.8 --ignore='(.github|.git|.DS_Store|TODOS.md|imgPreview|dist)'"
    },
    "devDependencies": {
        "electron-packager": "^7.0.3",   
        "electron-prebuilt": "^0.37.0",
        "rimraf": "^2.5.2"
    }
}
